{
  "name": "chai",
  "version": "1.0.0",
  "description": "A fancy chat application",
  "main": "index.js",
  "repository": "git@github.com:lb0dl/chai.git",
  "author": "Laurin & Dario",
  "license": "MIT",
  "private": true,
  "scripts": {
    "ts:lint": "eslint --ext .ts packages/*/{src,__tests__}/**.ts",
    "ts:format": "prettier --write --parser typescript \"packages/**/*.ts?(x)\"",
    "js:format": "prettier --write \"packages/**/*.vue?(x)\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "lerna": "^5.3.0",
    "lint-staged": "^13.0.3",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "nx": "14.5.2",
    "chalk": "^5.0.1",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write ."
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  }
}
